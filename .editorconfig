root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,css,scss,sass,json}]
indent_size = 2

[*.{yml,yml.dist}]
indent_style = space
indent_size = 2

[*.rb]
indent_size = 2

[Makefile]
indent_style = tab
