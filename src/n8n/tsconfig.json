{
	"compilerOptions": {
		"lib": [
			"es2020",
      "dom"
		],
		"module": "commonjs",
		"noImplicitAny": true,
		"removeComments": true,
		"strictNullChecks": true,
		"strict": true,
    "skipLibCheck": true,
		"preserveConstEnums": true,
		"outDir": "./dist/",
		"target": "es2020",
    "esModuleInterop": true
	},
	"include": [
		"credentials/**/*",
		"src/**/*",
		"nodes/**/*",
		"test/**/*"
	],
	"exclude": [
		"**/*.spec.ts"
	]
}
