{
  "name": "direccter-server",
  "version": "1.0.0",
  "main": "build/server.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "node build/server.js",
    "watch": "webpack --color --watch & nodemon",
    "nodemon": "nodemon build/server.js",
    "build": "NODE_ENV=production webpack --color",
    "postbuild": "chown -R --reference=package.json .",
    "test": "NODE_ENV=test jest",
    "test-watch": "npm run test -- --watchAll",
    "coverage": "rm -rf coverage/ && npm run test -- --coverage --coverageDirectory=coverage"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "config": "^1.30.0",
    "express": "^4.16.2",
    "fast-csv": "^2.4.1",
    "frentreprise": "../frentreprise",
    "json2csv": "^4.0.1",
    "mongoose": "^5.0.6",
    "multer": "^1.3.0",
    "promise-queue": "^2.2.5",
    "xlsx": "^0.12.1"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/build/",
      "<rootDir>/config/",
      "<rootDir>/lib/axios"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!<rootDir>/config/",
      "!<rootDir>/lib/axios"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.3",
    "babel-plugin-root-import": "^5.1.0",
    "babel-plugin-syntax-async-functions": "^6.13.0",
    "babel-plugin-transform-builtin-extend": "^1.1.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "fs-extra": "^5.0.0",
    "jest": "^23.6.0",
    "jest-express": "^1.8.0",
    "node-debug": "^0.1.0",
    "nodemon": "^1.17.1",
    "post-compile-webpack-plugin": "^0.1.1",
    "supertest": "^3.3.0",
    "tape": "^4.9.1",
    "webpack": "^4.0.0",
    "webpack-cli": "^2.0.9",
    "webpack-node-externals": "^1.6.0"
  }
}
